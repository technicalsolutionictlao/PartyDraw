<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ictlao.android.app.partydraw.HomeActivity"
    android:background="@drawable/game_select_background"
    android:keepScreenOn="true">

    <Button
        android:id="@+id/play"
        android:layout_width="155dp"
        android:layout_height="117dp"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:background="@drawable/play_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/play"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="70dp">

        <ImageView
            android:id="@+id/ictlaosoft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/by_ictlao" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/settingMain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/background_setting"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/facebook_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/facebook_button1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <Button
            android:id="@+id/help_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/help_button1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="548dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/colorSubList"
        android:textSize="20sp" />

</RelativeLayout>