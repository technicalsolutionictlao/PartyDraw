<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/setting_background"
    android:padding="2dp">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/select_mode"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/OffLineMode"
            android:text="@string/SelectGameActivityPopupSelectOfflineMode"
            android:textStyle="italic|bold"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:background="@drawable/online_background_button"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/OnLineMode"
            android:text="@string/SelectGameActivityPopupSelectOnlineMode"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            android:background="@drawable/online_background_button"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="45dp">
        <Button
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/ExitPopupMode"
            android:textAllCaps="false"
            android:text="@string/SelectGameActivityPopupSelectExitMode"
            android:textStyle="bold"
            android:background="@drawable/online_background_button"/>
    </RelativeLayout>
</LinearLayout>